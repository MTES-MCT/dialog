<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity
    name="App\Domain\Condition\Condition"
    table="condition">
    <id name="uuid" type="guid" column="uuid"/>
    <field name="negate" type="boolean" column="negate" nullable="false"/>
    <one-to-one field="vehicleCharacteristics" target-entity="App\Domain\Condition\VehicleCharacteristics" mapped-by="condition"/>
    <one-to-one field="period" target-entity="App\Domain\Condition\Period\Period" mapped-by="condition"/>
    <many-to-one field="measure" target-entity="App\Domain\Regulation\Measure" inversed-by="conditions">
        <join-column name="measure_uuid" referenced-column-name="uuid" on-delete="CASCADE" nullable="false"/>
    </many-to-one>
  </entity>
</doctrine-mapping>
