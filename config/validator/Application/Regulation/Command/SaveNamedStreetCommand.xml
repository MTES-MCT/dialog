<?xml version="1.0" encoding="UTF-8"?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping https://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">
    <class name="App\Application\Regulation\Command\Location\SaveNamedStreetCommand">
        <getter property="isEntireStreet">
            <constraint name="Type">
                <option name="type">boolean</option>
            </constraint>
        </getter>
        <property name="cityCode">
            <constraint name="Length">
                <option name="min">5</option>
                <option name="max">5</option>
            </constraint>
            <constraint name="When">
                <option name="expression"> this.roadType === 'lane'</option>
                <option name="constraints">
                    <constraint name="NotBlank">
                        <option name="message">regulation.location.cityCode.error.blank</option>
                    </constraint>
                </option>
            </constraint>
        </property>
        <property name="cityLabel">
            <constraint name="When">
                <option name="expression"> this.roadType === 'lane' </option>
                <option name="constraints">
                    <constraint name="NotBlank" />
                    <constraint name="Length">
                        <option name="max">255</option>
                    </constraint>
                </option>
            </constraint>
        </property>
        <property name="roadName">
            <constraint name="When">
                <option name="expression"> this.roadType === 'lane' </option>
                <option name="constraints">
                    <constraint name="NotBlank" />
                    <constraint name="Length">
                        <option name="max">255</option>
                    </constraint>
                </option>
            </constraint>
        </property>
        <property name="fromPointType">
            <constraint name="When">
                <option name="expression">this.roadType === 'lane' and !this.getIsEntireStreet()</option>
                <option name="constraints">
                    <constraint name="AtLeastOneOf">
                        <option name="constraints">
                            <constraint name="Expression">
                                <option name="expression">this.fromHouseNumber || this.fromRoadName</option>
                            </constraint>
                            <constraint name="Expression">
                                <option name="expression">this.toHouseNumber || this.toRoadName</option>
                            </constraint>
                        </option>
                        <option name="includeInternalMessages">false</option>
                        <option name="message">regulation.location.named_street.points.error.empty</option>
                    </constraint>
                </option>
            </constraint>
        </property>
        <property name="fromHouseNumber">
            <constraint name="Length">
                <option name="max">8</option>
            </constraint>
        </property>
        <property name="fromRoadName">
            <constraint name="Length">
                <option name="max">255</option>
            </constraint>
        </property>
        <property name="toHouseNumber">
            <constraint name="Length">
                <option name="max">8</option>
            </constraint>
        </property>
        <property name="toRoadName">
            <constraint name="Length">
                <option name="max">255</option>
            </constraint>
        </property>
    </class>
</constraint-mapping>
