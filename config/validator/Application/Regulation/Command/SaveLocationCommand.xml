<?xml version="1.0" encoding="UTF-8"?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping https://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">
    <class name="App\Application\Regulation\Command\Location\SaveLocationCommand">
        <property name="roadType">
            <constraint name="NotBlank" />
            <constraint name="When">
                <option name="expression">
                    'canUseRawGeoJSON' not in this.permissions
                </option>
                <option name="constraints">
                    <constraint name="NotEqualTo">
                        <option name="value">rawGeoJSON</option>
                        <option name="message">regulation.location.error.road_type.raw_geojson_forbidden</option>
                    </constraint>
                </option>
            </constraint>
        </property>
        <property name="namedStreet">
            <constraint name="Valid" />
        </property>
        <property name="numberedRoad">
            <constraint name="Valid" />
        </property>
        <property name="rawGeoJSON">
            <constraint name="Valid" />
        </property>
    </class>
</constraint-mapping>
