{% extends 'base.html.twig' %}

{% block body %}
    <h3>{{ 'home.list.title'|trans }}</h3>
    <a href="{{ path('app_regulations_list', { _format: 'xml' }) }}">{{ "home.link.datex"|trans }}</a>
    <div class="fr-table fr-table--layout-fixed">
        <table>
            <thead>
                <tr>
                    <td scope="col">#</td>
                    <th scope="col">{{ 'regulation_order.description'|trans }}</th>
                    <th scope="col">{{ 'regulation_order.issuing_authority'|trans }}</th>
                    <th scope="col">{{ 'regulation_order.period'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for obj in objects %}
                    {% set startPeriod = obj.period.startPeriod %}
                    {% set endPeriod = obj.period.endPeriod %}

                    <tr data-test="regulations_item">
                        <td>{{ obj.uuid }}</td>
                        <td>{{ obj.description }}</td>
                        <td>{{ obj.issuingAuthority }}</td>
                        <td>
                            {% if startPeriod and endPeriod %}
                                {{ 'regulation_order.period.temporary'|trans({
                                    '%startPeriod%': startPeriod|date('d/m/Y'),
                                    '%endPeriod%': endPeriod|date('d/m/Y'),
                                })}}
                            {% else %}
                                {% if "now"|date('d/m/Y') >= startPeriod|date('d/m/Y') %}
                                    {{ 'regulation_order.period.permanent.present'|trans({
                                        '%date%': startPeriod|date('d/m/Y'),
                                    })}}
                                {% else %}
                                    {{ 'regulation_order.period.permanent.futur'|trans({
                                        '%date%': startPeriod|date('d/m/Y'),
                                    })}}
                                {% endif %}
                                <p class="fr-badge fr-badge--sm fr-badge--info fr-badge--no-icon">
                                    {{ 'common.permanent'|trans}}
                                </p>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">
                            <p data-test="regulations_empty">
                                <em>{{ 'home.list.empty'|trans }}</em>
                            </p>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <h3>{{ 'home.add.title'|trans }}</h3>
    {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_row(form.description, {group_class: 'fr-input-group', widget_class: 'fr-input'}) }}
        {{ form_row(form.issuingAuthority, {group_class: 'fr-input-group', widget_class: 'fr-input', row_attr: {class: 'fr-mt-2w'}}) }}
        {{ form_row(form.startPeriod, {group_class: 'fr-input-group', widget_class: 'fr-input', row_attr: {class: 'fr-mt-2w'}}) }}
        {{ form_row(form.endPeriod, {group_class: 'fr-input-group', widget_class: 'fr-input', row_attr: {class: 'fr-mt-2w'}}) }}
        {{ form_row(form.save, {row_attr: {class: 'fr-mt-2w'}, attr: {class: 'fr-btn'}})}}
    {{ form_end(form) }}
{% endblock %}
