{% extends 'layouts/layout.html.twig' %}

{% block title %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <section class="fr-container fr-py-4w header" aria-labelledby="jumbotron">
        <div class="fr-grid-row fr-grid-row--gutters fr-grid-row--middle">
            <div class="fr-col-12 fr-col-md-8">
                <h1 id="jumbotron" class="fr-x-text--blue-france">{{ 'landing.jumbotron.title'|trans }}</h1>
                <ul class="fr-x-text--default-grey app-list--checkmarks fr-x-md-stack" style="--stack-spacing: 1rem;">
                    <li>{{ 'landing.jumbotron.description1'|trans|raw }}
                    </li>
                    <li>{{ 'landing.jumbotron.description2'|trans|raw }}
                    </li>
                    <li>{{ 'landing.jumbotron.description3'|trans|raw }}
                    </li>
                </ul>
            </div>
            <div class="fr-col-12 fr-col-md-4 fr-x-text--center">
                <img src="{{ asset('images/landing/illustration-gps.webp') }}" alt="{{ 'landing.jumbotron.illustration'|trans }}" height="272"/>
            </div>
        </div>
    </section>
    <section class="how-it-works" aria-labelledby="how-it-works">
        <div class="fr-container fr-py-4w fr-background-map">
            <div class="fr-grid-row fr-mb-3w">
                <div class="fr-col fr-col-md-6">
                    <div class="fr-card ">
                        <div class="fr-card__body">
                            <div class="fr-card__content">
                                <h3 class="fr-card__title">
                                    {{ 'landing.for-gps.title'|trans }}
                                </h3>
                                <p class="fr-card__desc">{{ 'landing.for-gps.description'|trans }}</p>
                            </div>
                            <div class="fr-card__footer">
                                    <a class="fr-btn fr-btn--icon-right fr-icon-road-map-line" aria-hidden="true" href="{{ path('app_carto') }}">{{ 'landing.for-gps.map'|trans }}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="itinerary fr-container fr-py-6w fr-x-background-alt--blue-france" aria-labelledby="itinerary">
        <h2 id="itinerary" class="fr-x-text--blue-france">{{ 'landing.how-it-works.title'|trans }}</h2>
        <p class="fr-text--xl fr-m-0">{{ 'landing.how-it-works.description'|trans|raw }}</p>
        {% include '_landing_diagram.html.twig' with {class: 'fr-mt-3w', spotlight: 'dialog'} only %}
    </section>
    <section class="fr-container fr-py-6w fr-background-alt--grey">
                <h2 class="fr-x-text--blue-france">{{ 'landing.who-are-we.title'|trans }}</h2>
                <p class="fr-text--xl">{{ 'landing.who-are-we.description1'|trans|raw }}</p>
                <p class="fr-text--xl">{{ 'landing.who-are-we.description2'|trans|raw }}</p>
                <a href="https://beta.gouv.fr/startups/dialogue.html" class="fr-btn fr-btn--secondary" target="_blank">
                    {{ 'landing.who-are-we.team'|trans }}
                </a>
    </section>
{% endblock %}
