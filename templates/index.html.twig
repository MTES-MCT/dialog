{% extends 'layouts/layout.html.twig' %}

{% block title %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <!-- Jumbotron -->
    <div class="fr-container fr-py-4w fr-py-md-6w">
        <div class="fr-grid-row fr-grid-row--gutters fr-grid-row--middle">
            <div class="fr-col-12 fr-col-md-8">
                <h1 class="fr-x-text--blue-france">
                    {{ 'landing.jumbotron.title'|trans }}
                </h1>

                <ul class="fr-text--xl fr-x-text--default-grey app-list--checkmarks">
                    <li>
                        {{ 'landing.jumbotron.description1'|trans|raw }}
                    </li>
                    <li class="fr-mt-md-1w">
                        {{ 'landing.jumbotron.description2'|trans|raw }}
                    </li>
                    <li class="fr-mt-md-1w">
                        {{ 'landing.jumbotron.description3'|trans|raw }}
                    </li>
                </ul>
            </div>

            <div class="fr-col-12 fr-col-md-4 fr-x-text--center" aria-hidden="true">
                <img src="{{ asset('images/landing/illustration-gps.webp') }}" height="272" />
            </div>
        </div>
    </div>

    <!-- Aperçu carte + call to action -->
    <div class="app-landing-map">
        <div class="fr-container">
            <div class="app-landing-map-card">
                <h2 class="fr-h2">
                    {{ 'landing.map.title'|trans }}
                </h2>
                <p>
                    {{ 'landing.map.description'|trans }}
                </p>
                <a class="fr-btn fr-btn--icon-right fr-icon-road-map-line" href="{{ path('app_carto') }}">
                    {{ 'landing.map.link'|trans }}
                </a>
            </div>
        </div>
    </div>

    <!-- Comment ça marche ? -->
    <div class="fr-x-background-artwork-decorative-blue-france">
        <div class="fr-container fr-py-6w">
            <h2 class="fr-x-text--blue-france">
                {{ 'landing.how-it-works.title'|trans }}
            </h2>
            <p class="fr-text--xl fr-m-0">
                {{ 'landing.how-it-works.description'|trans|raw }}
            </p>
            {% include '_landing_diagram.html.twig' with {class: 'fr-mt-3w'} only %}
        </div>
    </div>

    <!-- Diffuser mes données avec DiaLog -->
    <div class="fr-container fr-py-6w">
        <h2>{{ 'landing.distribute.title'|trans }}</h2>

        <!-- Saisir un arrêté -->
        <div class="app-landing-distribute-input">
            <div>
                <h3>
                    <span aria-hidden="true">✏️</span>
                    {{ 'landing.distribute.input.title'|trans }}
                </h3>
                <p>
                    {{ 'landing.distribute.input.description'|trans|raw }}
                </p>
                <p>
                    {{ 'landing.distribute.input.more'|trans({'%href%': path('app_landing_details') ~ '#input'})|raw }}
                </p>
                <p>
                    {{ 'landing.distribute.input.test'|trans }}
                </p>
                <a href="{{ path('app_register') }}" class="fr-btn fr-btn--secondary fr-icon-user-add-line fr-btn--icon-left" aria-hidden="true" data-testid="register-link">
                    {{ 'landing.distribute.input.register'|trans }}
                </a>
            </div>

            <img src="{{ asset('images/landing/illustration-arreté-temporaire.webp') }}" height="411" loading="lazy" class="fr-hidden fr-unhidden-lg" aria-hidden="true">
        </div>

        <div class="app-landing-hr">
            <hr>
        </div>

        <!-- Intégrer mes données -->
        <div class="app-landing-distribute-integration">
            <div>
                <h3>
                    <span aria-hidden="true">⚙️</span>
                    {{ 'landing.distribute.integration.title'|trans }}
                </h3>
                <p>
                    {{ 'landing.distribute.integration.description'|trans|raw }}
                </p>
                <p>
                    {{ 'landing.distribute.integration.more'|trans({'%href%': path('app_landing_details') ~ '#integration' })|raw }}
                </p>
                <p>
                    {{ 'landing.distribute.integration.contact'|trans }}
                </p>
                <a href="{{ path('app_contact') }}" class="fr-btn fr-btn--secondary fr-icon-mail-open-line fr-btn--icon-left" data-testid="contact-link">
                    {{ 'landing.distribute.integration.contact.link'|trans }}
                </a>
            </div>

            <img src="{{ asset('images/landing/illustration-liste-arretés-publiés.webp') }}" height="411" loading="lazy" class="fr-hidden fr-unhidden-lg" aria-hidden="true">
        </div>
    </div>

    <div class="fr-background-alt--grey fr-py-6w">
        <div class="fr-container">
            <h2 class="fr-x-text--blue-france">
                {{ 'landing.who-are-we.title'|trans }}
            </h2>
            <p class="fr-text--xl">
                {{ 'landing.who-are-we.description1'|trans|raw }}
            </p>
            <p class="fr-text--xl">
                {{ 'landing.who-are-we.description2'|trans|raw }}
            </p>
            <a
                href="https://beta.gouv.fr/startups/dialogue.html"
                class="fr-btn fr-btn--tertiary"
                target="_blank"
                title="{{ 'common.targetblank'|trans({'%metaTitle%': 'landing.who-are-we.team.metaTitle'|trans}) }}"
            >
                {{ 'landing.who-are-we.team'|trans }}
            </a>
        </div>
    </div>
{% endblock %}
