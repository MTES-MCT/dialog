{% extends 'layouts/layout.html.twig' %}

{% block title %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <section class="fr-container fr-py-4w header" aria-labelledby="jumbotron">
        <div class="fr-grid-row fr-grid-row--gutters fr-grid-row--middle">
            <div class="fr-col-12 fr-col-md-8">
                <h1 id="jumbotron" class="fr-x-text--blue-france">{{ 'landing.jumbotron.title'|trans }}</h1>
                <ul class="fr-x-text--default-grey app-list--checkmarks fr-x-md-stack" style="--stack-spacing: 1rem;">
                    <li>{{ 'landing.jumbotron.description1'|trans|raw }}
                    </li>
                    <li>{{ 'landing.jumbotron.description2'|trans|raw }}
                    </li>
                    <li>{{ 'landing.jumbotron.description3'|trans|raw }}
                    </li>
                </ul>
            </div>
            <div class="fr-col-12 fr-col-md-4 fr-x-text--center">
                <img src="{{ asset('images/landing/illustration-gps.webp') }}" alt="{{ 'landing.jumbotron.illustration'|trans }}" height="272"/>
            </div>
        </div>
    </section>
    <section class="how-it-works" aria-labelledby="how-it-works">
        <div class="fr-container fr-pt-4w fr-background-map fr-grid-row fr-grid-row--middle">
            <div class="fr-col fr-col-md-6">
                <div class="fr-card ">
                    <div class="fr-card__body">
                        <div class="fr-card__content">
                            <h3 class="fr-card__title">
                                {{ 'landing.for-gps.title'|trans }}
                            </h3>
                            <p class="fr-card__desc">{{ 'landing.for-gps.description'|trans }}</p>
                        </div>
                        <div class="fr-card__footer">
                                <a class="fr-btn fr-btn--icon-right fr-icon-road-map-line" aria-hidden="true" href="{{ path('app_carto') }}">{{ 'landing.for-gps.map'|trans }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="itinerary fr-container fr-py-6w fr-x-background-alt--blue-france" aria-labelledby="itinerary">
        <h2 id="itinerary" class="fr-x-text--blue-france">{{ 'landing.how-it-works.title'|trans }}</h2>
        <p class="fr-text--xl fr-m-0">{{ 'landing.how-it-works.description'|trans|raw }}</p>
        {% include '_landing_diagram.html.twig' with {class: 'fr-mt-3w', spotlight: 'dialog'} only %}
    </section>
    <section class="fr-container fr-py-6w" aria-labelledby="distribute-data">
        <h2 class="">{{ 'landing.distribute-data.title'|trans }}</h2>
        <div class="fr-grid-row fr-grid-row--gutters fr-grid-row--middle fr-py-4w">
            <div class="fr-col-12 fr-col-lg-4">
                <h3 class="">✏️ {{ 'distribute-data-by-input.title'|trans }}</h3>
                <p>{{ 'landing.distribute-data-by-input.description'|trans|raw }}</p>
                <p>{{ 'landing.distribute-data-by-input.more-informations'|trans }}
                    <a href="#" class="fr-link">{{ 'landing.distribute-data-by-input.more-informations.link'|trans }}</a>
                </p>
                <p>{{ 'landing.distribute-data-by-input.test'|trans }}</p>
                <a href="{{ path('app_register') }}" class="fr-btn fr-btn--secondary fr-icon-user-add-line fr-btn--icon-left" aria-hidden="true" data-testid="register-link">
                {{ 'landing.distribute-data-by-input.create-account-button'|trans }}
                </a>
            </div>
            <div class="fr-hidden-sm fr-hidden fr-unhidden-lg fr-col-lg-8 fr-x-text--center">
                <img src="{{ asset('images/landing/illustration-arreté-temporaire.webp') }}" height="411" alt="Illustration arrêté de circulation temporaire" class="fr-background-open-blue-france-active">
            </div>
        </div>
        <svg width="160" height="2" viewBox="0 0 160 2" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M160 1.19141H0V0.191406H160V1.19141Z" fill="#DDDDDD"/>
        </svg>
        <div class="fr-grid-row fr-grid-row--gutters fr-grid-row--middle fr-py-4w">
            <div class="fr-col-12 fr-col-lg-4">
                <h3 class="">⚙️ {{ 'landing.distribute-data-by-integration.title'|trans }}</h3>
                <p>{{ 'landing.distribute-data-by-integration.description'|trans|raw }}</p>
                <p>{{ 'landing.distribute-data-by-integration.more-informations'|trans }}
                    <a href="#" class="fr-link">{{ 'landing.distribute-data-by-integration.more-informations.link'|trans }}</a>
                </p>
                <p>{{ 'landing.distribute-data-by-integration.contact'|trans }}</p>
                <a href="{{ path('app_contact') }}" class="fr-btn fr-btn--secondary fr-icon-mail-open-line fr-btn--icon-left" aria-hidden="true" data-testid="contact-link">
                {{ 'landing.distribute-data-by-integration.contact-button'|trans }}
                </a>
            </div>
            <div class="fr-hidden-sm fr-hidden fr-unhidden-lg fr-col-lg-8 fr-x-text--center">
                <img class="fr-background-open-blue-france-active" src="{{ asset('images/landing/illustration-liste-arretés-publiés.webp') }}" height="411" alt="Illustration arrêté de circulation temporaire">
            </div>
        </div>
    </section>
    <section class="fr-container fr-py-6w fr-background-alt--grey">
        <h2 class="fr-x-text--blue-france">{{ 'landing.who-are-we.title'|trans }}</h2>
        <p class="fr-text--xl">{{ 'landing.who-are-we.description1'|trans|raw }}</p>
        <p class="fr-text--xl">{{ 'landing.who-are-we.description2'|trans|raw }}</p>
        <a href="https://beta.gouv.fr/startups/dialogue.html" class="fr-btn fr-btn--secondary" target="_blank">
            {{ 'landing.who-are-we.team'|trans }}
        </a>
    </section>
{% endblock %}
