{% extends 'base.html.twig' %}

{% block body %}
    <section class="fr-container fr-py-5w" aria-labelledby="regulation-detail">
        <span class="fr-badge fr-badge--success">{{ 'common.published'|trans }}</span>
        <h2 class="regulation-detail">{{ 'regulation.detail.title'|trans({ '%city%': regulationOrderRecord.location.city}) }}</h2>
        {% include "regulation/_summary.html.twig" with { 'canEdit': false, regulationOrderRecord} only %}

        <div class="fr-grid-row fr-grid-row--gutters fr-py-4w">
            <div class="fr-col fr-col-12 fr-col-md-6">
                <div class="fr-card" >
                    <div
                        class="fr-card__body"
                        {{ stimulus_controller('clipboard') }}
                        data-clipboard-url-value="{{ url('app_regulation_detail', { uuid: regulationOrderRecord.uuid}) }}"
                    >
                        <div class="fr-card__content">
                            <h3 class="fr-card__title">{{ 'regulation.detail.share'|trans }}</h3>
                            <p class="fr-card__desc">
                                <button data-action="clipboard#copy" class="fr-btn fr-btn--tertiary fr-btn--icon-right fr-fi-arrow-right-line">
                                    {{ "regulation.detail.copy"|trans }}
                                </button>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="fr-col-12 fr-col-md-6">
                <div class="fr-card">
                    <div class="fr-card__body">
                        <div class="fr-card__content">
                            <h3 class="fr-card__title">{{ 'regulation.detail.export'|trans }}</h3>
                            <p class="fr-card__desc">
                                <a class="fr-title--blue-france" href="{{ path('api_regulations_list', { _format: 'xml' }) }}" target="_blank">
                                    {{ "regulation.detail.datex"|trans }}
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <a href="{{ path('app_regulations_list', { tab: 'published' }) }}" class="fr-link fr-fi-arrow-left-line fr-link--icon-left">
            {{ 'regulation.detail.see_all'|trans }}
        </a>
    </section>
{% endblock %}
