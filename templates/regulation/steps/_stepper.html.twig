<div class="fr-stepper fr-col fr-col-lg-6">
    <h2 class="fr-stepper__title">
        <span class="fr-stepper__state">{{ 'regulation.stepper.steps'|trans({'%step%': stepNumber})}}</span>
        {{ stepName|trans }}
    </h2>
    <div class="fr-stepper__steps" data-fr-current-step="{{ stepNumber }}" data-fr-steps="4"></div>
    {% if stepNumber < 4 %}
        <p class="fr-stepper__details">
            <span class="fr-text--bold">{{ 'regulation.stepper.next'|trans }}</span> {{ nextStep|trans }}
        </p>
    {% endif %}
</div>
