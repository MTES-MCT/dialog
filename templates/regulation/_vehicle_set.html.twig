{%- if restrictedTypes|length > 0 -%}
    {{ 'regulation.vehicles.prefix'|trans }}
    {% for vehicleType in restrictedTypes %}
        {%- if vehicleType.isOther|default(false) -%}
            {{ vehicleType.name|lower }}
        {%- else -%}
            {{ ('regulation.vehicle_set.type.' ~ vehicleType.name)|trans|lower }}
            {%- if vehicleType.name == 'heavyGoodsVehicle' and heavyweightCharacteristics|length > 0 %}
                {{ 'regulation.vehicles.heavyweightCharacteristics.prefix'|trans }}
                {% for item in heavyweightCharacteristics %}
                    {{ item.value }} {{ ('common.unit.' ~ item.unit)|trans -}}
                    {%- if item.suffix %} {{ ('regulation.vehicles.heavyweightCharacteristics.suffix.' ~ item.name)|trans }}{% endif %}
                    {%- if loop.revindex0 == 1 %} {{ 'common.or'|trans }} {% elseif not loop.last %}, {% endif -%}
                {% endfor -%}
            {% endif -%}
        {%- endif -%}
        {%- if loop.revindex0 == 1 %} {{ 'regulation.vehicles.and'|trans }} {% elseif not loop.last %}, {% endif -%}
    {% endfor -%}
{%- else -%}
    {{ 'regulation.vehicles.all'|trans }}
{%- endif -%}

{% if exemptedTypes|length > 0 -%}
    , {{ 'regulation.vehicles.except'|trans }}
    {% for vehicleType in exemptedTypes %}
        {%- if vehicleType.isOther|default(false) -%}
            {{ vehicleType.name|lower }}
        {%- else -%}
            {{ ('regulation.vehicle_set.type.' ~ vehicleType.name)|trans|lower }}
        {%- endif -%}
        {%- if loop.revindex0 == 1 %} {{ 'regulation.vehicles.and'|trans }} {% elseif not loop.last %}, {% endif -%}
    {% endfor %}
{% endif %}
