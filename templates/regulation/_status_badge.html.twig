{% set text = 'regulation.status_badge.' ~ status ~ '.text' %}
{% set hint = 'regulation.status_badge.' ~ status ~ '.hint' %}

<span class="fr-mt-2v fr-badge {% if status == 'draft' %}fr-badge--info{% else %}fr-badge--success{% endif %}" data-testid="status-badge">
    {{ text|trans }}
</span>

{% if withHint|default(false) %}
    <p class="fr-text--sm fr-x-text--mention-grey fr-mt-1v">
        {{ hint|trans }}
    </p>

    {% if action == 'create' %}
        <p>Créé le {{ date }}</p>
    {% elseif action == 'publish' %}
        <p>Publié le {{ date }}</p>
    {% else %}
        <p>Modifié le {{ date }}</p>
    {% endif %}

{% endif %}
