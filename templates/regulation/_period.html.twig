{%- for period in periods -%}
    <br/>
    {%- if period.endDateTime -%}
        du {{ period.startDateTime|date('d/m/Y - H\\hi' ) }} au {{ period.endDateTime|date('d/m/Y - H\\hi' ) }}
    {%- else -%}
        {{ period.startDateTime|date('d/m/Y - H\\hi' ) }}
    {%- endif -%}
    {%- if period.dailyRange -%}
        ,&nbsp;
        {%- for dayRange in period.dailyRange.dayRanges -%}
            {%- if dayRange.firstDay == dayRange.lastDay -%}
                {{ 'regulation.period.one_day'|trans({
                    '%firstDay%': ('regulation.period.days.' ~ dayRange.firstDay)|trans,
                })|lower }}
            {%- else -%}
                {{ 'regulation.period.many_days'|trans({
                    '%firstDay%': ('regulation.period.days.' ~ dayRange.firstDay)|trans,
                    '%lastDay%': ('regulation.period.days.' ~ dayRange.lastDay)|trans,
                })|lower }}
            {%- endif -%}
            {% if period.dailyRange.timeSlots|length %}
                (
                {%- for timeSlot in period.dailyRange.timeSlots -%}
                    {{ timeSlot.startTime|date('H\\hi' ) }}-{{ timeSlot.endTime|date('H\\hi' ) }}
                    {%- if not loop.last -%}et {%- endif -%}
                {%- endfor -%}
                )
            {% endif %}
        {%- endfor -%}
    {%- endif -%}
{% else %}
    {{ 'regulation.period.all_days'|trans }}
{% endfor %}
