{% extends "layouts/app.html.twig" %}
{% set metaTitle = user.fullName %}
{% block title %}
    {{ metaTitle }} - {{ parent() }}
{% endblock %}

{% block body %}
    <section class="fr-container fr-py-5w">
        <div class="fr-grid-row fr-grid-row--gutters">
            <div class="fr-col-12 fr-col-md-3">
                <nav class="fr-sidemenu" role="navigation" aria-labelledby="sidemenu-title">
                    <div class="fr-sidemenu__inner">
                        <div class="fr-collapse" id="sidemenu">
                            <p class="fr-sidemenu__title" id="sidemenu-title">{{ user.fullName }}</p>
                            <ul class="fr-sidemenu__list">
                                <li class="fr-sidemenu__item">
                                    <a class="fr-sidemenu__link" href="/profile">
                                        {{'profile.title'|trans}}
                                    </a>
                                </li>
                                <li class="fr-sidemenu__item">
                                    <a class="fr-sidemenu__link" href="/profile/password">
                                        {{'profile.password.title'|trans}}
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
            <div class="fr-col-12 fr-col-md-6">
                <h2 class="fr-mb-0">{{ 'profile.password.title'|trans }}</h2>
                <p>{{ 'profile.subtitle'|trans }}</p>
                {{ form(form) }}
            </div>
        </div>
    </section>
{% endblock %}
