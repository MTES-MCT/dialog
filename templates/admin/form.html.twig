{% macro labelsValues(variables) %}
    {%- set labelValue = [] -%}
    {%- for variable in variables -%}
        {%- set labelValue = labelValue|merge([{
                label: ('regulation_order_template.variables.list.'~variable)|trans, 
                value: ('[' ~ variable ~ ']')
            }]) -%}
    {%- endfor -%}
    {{- labelValue|json_encode -}}
{% endmacro labelsValues %}

{% block _RegulationOrderTemplate_rich_textarea_title_widget %}
    {{ form_widget(form, {
        attr: {
            'data-controller': 'rich-text',
            'data-rich-text-height-value': 300,
            'data-rich-text-variables-value': _self.labelsValues([
                    'numero_arrete', 
                    'intitule_arrete', 
                    'pouvoir_de_signature', 
                    'nom_commune', 
                    'nom_signataire', 
                    'departement',
                ])|raw
        }
    }) }}
{% endblock %}

