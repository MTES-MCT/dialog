<div class="d-flex align-items-center gap-2">
    <span class="badge badge-secondary" title="{{ field.value }}">
        {{ field.formattedValue ?? field.value }}
    </span>
    <button
        type="button"
        class="btn btn-sm btn-outline-secondary"
        data-controller="copy"
        data-copy-text-value="{{ field.value }}"
        data-action="click->copy#copy"
        title="Copier dans le presse-papiers"
    >
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" aria-hidden="true" focusable="false">
            <rect x="9" y="9" width="11" height="11" rx="2" ry="2" fill="none" stroke="currentColor" stroke-width="2"/>
            <rect x="4" y="4" width="11" height="11" rx="2" ry="2" fill="none" stroke="currentColor" stroke-width="2"/>
        </svg>
        <span class="visually-hidden" data-copy-target="label">Copier</span>
    </button>
</div>
