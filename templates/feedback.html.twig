{% extends 'layouts/app.html.twig' %}

{% block title %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="fr-container fr-container--fluid fr-mt-md-10v fr-mb-md-14v">
        <div class="fr-grid-row fr-grid-row-gutters fr-grid-row--center">
            <div class="fr-col-12 fr-col-md-9 fr-col-lg-8">
                <div class="fr-container fr-background-alt--grey fr-px-md-0 fr-py-10v">
                    <div class="fr-grid-row fr-grid-row-gutters fr-grid-row--center">
                        <div class="fr-col-12 fr-col-md-9 fr-col-lg-8">
                            <h1>Votre Avis</h1>
                            {{ form_start(form) }}

                                {{ form_row(form.content, {group_class: 'fr-input-group', widget_class: 'fr-input'}) }}
                                {{ form_row(form.consentToBeContacted, {group_class: 'fr-input-group', widget_class: 'fr-input'}) }}
                                {{ form_row(form.save, {group_class: 'fr-btns-group'}) }}

                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>   
{% endblock %}
