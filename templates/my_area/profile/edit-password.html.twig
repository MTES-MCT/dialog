{% extends "layouts/layout.html.twig" %}
{% set metaTitle = user.fullName %}
{% block title %}
    {{ metaTitle }} - {{ parent() }}
{% endblock %}

{% block body %}
    <section class="fr-container fr-py-5w">
        <div class="fr-grid-row fr-grid-row--gutters">
            <div class="fr-col-12 fr-col-md-3">
                {{ include ('my_area/profile/_menu.html.twig') }}
            </div>
            <div class="fr-col-12 fr-col-md-6">
                {% include "common/breadcrumb.html.twig" with { items: [
                    { title: 'user.myarea'|trans, path: 'app_my_area'},
                    { title: 'profile.password.title'|trans, url: path('app_profile_password'), generatedPath: true },
                    { title: metaTitle },
                ]} %}
                <h2 class="fr-mb-2w">{{ 'profile.password.title'|trans }}</h2>
                {{ form(form) }}
            </div>
        </div>
    </section>
{% endblock %}
